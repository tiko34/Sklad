<Page x:Class="Sklad.ytr1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sklad"
      mc:Ignorable="d" 
      d:DesignHeight="569" d:DesignWidth="642"
      Title="ytr1">

    <Grid>
        <ComboBox 
            x:Name="cmbclient"
            ToolTip="Выберите клиента" 
            Margin="349,10,10,0"
            VerticalAlignment="Top"
            IsReadOnly="True" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{Binding Название}" Width="16" Height="16" Margin="0,2,5,2" />
                        <TextBlock Text="{Binding Название}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Page>
