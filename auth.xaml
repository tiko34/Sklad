<Window x:Class="Sklad.auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sklad"
        mc:Ignorable="d"
        Title="Авторизация оператора" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid >
        <Button Margin="150,0,132,60" VerticalAlignment="Bottom" Height="21" Click="Button_Click">
            <TextBlock Text="Авторизоваться" Width="90" HorizontalAlignment="Center"></TextBlock>
        </Button>
        <TextBox x:Name="AuthPass" Height="23" Margin="152,128,132,0" TextWrapping="NoWrap"  VerticalAlignment="Top"/>
        <TextBox x:Name="AuthLogin" Height="23" Margin="152,78,132,0" TextWrapping="NoWrap"  VerticalAlignment="Top"/>
        <Label  HorizontalAlignment="Left" Margin="80,78,0,0" VerticalAlignment="Top">
            <TextBlock Text="Логин"></TextBlock>
        </Label>
        <Label  HorizontalAlignment="Left" Margin="80,128,0,0" VerticalAlignment="Top">
            <TextBlock Text="Пароль"></TextBlock>
        </Label>
        <Button Margin="150,216,132,0" VerticalAlignment="Top" Click="Button_Click_1">
            <TextBlock Text="Выход" HorizontalAlignment="Center"></TextBlock>
        </Button>

    </Grid>
</Window>
